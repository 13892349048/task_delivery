{
	"info": {
		"name": "TaskManage Organization API Tests",
		"description": "TaskManage组织架构管理API测试集合",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.data.access_token);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\"username\": \"admin\", \"password\": \"admin123\"}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Departments",
			"item": [
				{
					"name": "Create Department",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{access_token}}"},
							{"key": "Content-Type", "value": "application/json"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\"name\": \"技术部\", \"code\": \"TECH\", \"description\": \"技术开发部门\"}"
						},
						"url": "{{base_url}}/api/v1/departments"
					}
				},
				{
					"name": "List Departments",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
						"url": "{{base_url}}/api/v1/departments?page=1&page_size=10"
					}
				}
			]
		},
		{
			"name": "Positions",
			"item": [
				{
					"name": "Create Position",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{access_token}}"},
							{"key": "Content-Type", "value": "application/json"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\"name\": \"高级工程师\", \"code\": \"SENIOR_ENG\", \"category\": \"技术\", \"level\": 3}"
						},
						"url": "{{base_url}}/api/v1/positions"
					}
				},
				{
					"name": "List Positions",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
						"url": "{{base_url}}/api/v1/positions?page=1&page_size=10"
					}
				}
			]
		},
		{
			"name": "Projects",
			"item": [
				{
					"name": "Create Project",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{access_token}}"},
							{"key": "Content-Type", "value": "application/json"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\"name\": \"任务管理系统\", \"code\": \"TMS\", \"description\": \"企业任务管理\", \"department_id\": 1, \"manager_id\": 1}"
						},
						"url": "{{base_url}}/api/v1/projects"
					}
				},
				{
					"name": "List Projects",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
						"url": "{{base_url}}/api/v1/projects?page=1&page_size=10"
					}
				}
			]
		}
	]
}
